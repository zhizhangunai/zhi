{
    "compilerOptions": {
        "module": "ES2015",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true,
        "declaration": true,
        "skipLibCheck": true,
        "noEmit": true,
        "allowJs": true
    }
}
